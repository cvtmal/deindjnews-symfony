{% extends 'base.html.twig' %}

{% block title %}Dashboard - DeinDJ Newsletter{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --bg-light: #FDFDFC;
            --card-light: #ffffff;
            --border-light: #e3e3e0;
            --text-light: #1a1a1a;
            --text-secondary-light: #6b7280;

            --bg-dark: #0a0a0a;
            --card-dark: #161615;
            --border-dark: #3E3E3A;
            --text-dark: #ffffff;
            --text-secondary-dark: #9ca3af;
        }

        body.dark {
            background-color: var(--bg-dark);
            color: var(--text-dark);
        }

        body.dark .card {
            background-color: var(--card-dark);
            border-color: var(--border-dark);
        }

        body.dark .text-secondary {
            color: var(--text-secondary-dark);
        }

        .card {
            background-color: var(--card-light);
            border: 1px solid var(--border-light);
            border-radius: 12px;
            padding: 24px;
            transition: all 0.3s ease;
        }

        .metric-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 16px;
        }

        .metric-value {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 4px;
        }

        .metric-label {
            font-size: 14px;
            opacity: 0.7;
        }

        .metric-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 8px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen transition-colors duration-300" id="dashboard">
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold mb-2">Newsletter Dashboard</h1>
                <p class="text-secondary">DeinDJ.ch Newsletter Management System</p>
            </div>
            <div class="flex items-center space-x-4">
                <button id="theme-toggle" class="p-3 rounded-lg border transition-colors hover:bg-gray-100 dark:hover:bg-gray-800">
                    <svg class="w-5 h-5" id="theme-icon">
                        <use href="#sun-icon"></use>
                    </svg>
                </button>
                <a href="https://deindj.ch" target="_blank">
                    <img src="https://deindj.ch/images/logo-light.png" alt="DeinDJ Logo" class="h-10 dark:hidden">
                    <img src="https://deindj.ch/images/logo-dark.png" alt="DeinDJ Logo" class="h-10 hidden dark:block">
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card">
                <div class="metric-icon bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300">
                    üë•
                </div>
                <div class="metric-value">{{ stats.total|number_format(0, '.', ',') }}</div>
                <div class="metric-label">Total Subscribers</div>
            </div>

            <div class="card">
                <div class="metric-icon bg-green-100 text-green-600 dark:bg-green-900 dark:text-green-300">
                    ‚úâÔ∏è
                </div>
                <div class="metric-value">
                    {{ stats.sent|number_format(0, '.', ',') }}
                    <span class="metric-badge bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-200">
                        {{ stats.sentPercentage }}%
                    </span>
                </div>
                <div class="metric-label">Newsletters Sent</div>
            </div>

            <div class="card">
                <div class="metric-icon bg-yellow-100 text-yellow-600 dark:bg-yellow-900 dark:text-yellow-300">
                    ‚è≥
                </div>
                <div class="metric-value">{{ stats.pending|number_format(0, '.', ',') }}</div>
                <div class="metric-label">Pending</div>
            </div>

            <div class="card">
                <div class="metric-icon bg-red-100 text-red-600 dark:bg-red-900 dark:text-red-300">
                    üö´
                </div>
                <div class="metric-value">
                    {{ stats.unsubscribed|number_format(0, '.', ',') }}
                    <span class="metric-badge bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-200">
                        {{ stats.unsubscribeRate }}%
                    </span>
                </div>
                <div class="metric-label">Unsubscribed</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2">
                <div class="card">
                    <h2 class="text-xl font-bold mb-4">üìä Recent Activity</h2>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b dark:border-gray-700">
                                    <th class="text-left py-3 px-2">Email</th>
                                    <th class="text-left py-3 px-2">Name</th>
                                    <th class="text-left py-3 px-2">Sent At</th>
                                    <th class="text-left py-3 px-2">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for subscriber in recentActivity %}
                                <tr class="border-b dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-900">
                                    <td class="py-3 px-2 text-sm">{{ subscriber.email }}</td>
                                    <td class="py-3 px-2 text-sm">{{ subscriber.name|default('-') }}</td>
                                    <td class="py-3 px-2 text-sm">{{ subscriber.sentAt|date('Y-m-d H:i') }}</td>
                                    <td class="py-3 px-2">
                                        {% if subscriber.unsubscribedAt %}
                                            <span class="text-xs px-2 py-1 bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-200 rounded">Unsubscribed</span>
                                        {% elseif subscriber.lastClickedAt %}
                                            <span class="text-xs px-2 py-1 bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-200 rounded">Clicked</span>
                                        {% else %}
                                            <span class="text-xs px-2 py-1 bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200 rounded">Sent</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="4" class="py-8 text-center text-gray-500">No activity yet</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="card">
                    <h2 class="text-xl font-bold mb-4">üìà Engagement Metrics</h2>
                    <div class="space-y-4">
                        <div>
                            <div class="flex justify-between mb-2">
                                <span class="text-sm">Click-through Rate</span>
                                <span class="font-bold">{{ stats.clickThroughRate }}%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3">
                                <div class="bg-gradient-to-r from-purple-500 to-pink-500 h-3 rounded-full transition-all duration-500"
                                     style="width: {{ stats.clickThroughRate }}%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-2">
                                <span class="text-sm">Unsubscribe Rate</span>
                                <span class="font-bold">{{ stats.unsubscribeRate }}%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3">
                                <div class="bg-gradient-to-r from-red-500 to-orange-500 h-3 rounded-full transition-all duration-500"
                                     style="width: {{ stats.unsubscribeRate }}%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h2 class="text-xl font-bold mb-4">üîó Popular Links</h2>
                    <div class="space-y-3">
                        {% for link in popularLinks %}
                        <div class="flex justify-between items-center">
                            <span class="text-sm">{{ link.link }}</span>
                            <span class="px-3 py-1 bg-purple-100 text-purple-800 dark:bg-purple-800 dark:text-purple-200 rounded-full text-sm font-bold">
                                {{ link.count }}
                            </span>
                        </div>
                        {% else %}
                        <p class="text-gray-500 text-center py-4">No clicks tracked yet</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<svg style="display: none;">
    <symbol id="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </symbol>
    <symbol id="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </symbol>
</svg>

<script>
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    const body = document.body;

    const savedTheme = localStorage.getItem('theme') || 'light';
    if (savedTheme === 'dark') {
        body.classList.add('dark');
        themeIcon.innerHTML = '<use href="#moon-icon"></use>';
    }

    themeToggle.addEventListener('click', () => {
        body.classList.toggle('dark');
        const isDark = body.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        themeIcon.innerHTML = isDark ? '<use href="#moon-icon"></use>' : '<use href="#sun-icon"></use>';
    });
</script>
{% endblock %}